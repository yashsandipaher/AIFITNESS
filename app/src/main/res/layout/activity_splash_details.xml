<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/night"
    tools:context=".splash_details">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img3"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4F070708"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/layout_drawable"
            android:layout_alignParentBottom="true">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meet Your \nAI Fitness Coach"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lets harness the power of technolgy to tailor workout specifically for you."
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:text="Next"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17dp"/>







        </LinearLayout>




    </RelativeLayout>




</FrameLayout>